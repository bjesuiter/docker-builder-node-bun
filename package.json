{
	"name": "docker-builder-node-bun",
	"type": "module",
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"config": {
		"image_name": "bjesuiter/docker-builder-node-bun",
		"prod_version": "1.4.0"
	},
	"scripts": {
		"dev": "bun build-mac && docker run --rm -it $npm_package_config_image_name",
		"build-mac": "docker build --pull -t $npm_package_config_image_name ./variants/ubuntu-pure ",
		"dev-rebuild": "bun prod-build-mac && docker run --rm -it $npm_package_config_image_name",
		"prod-build-mac": "docker build --no-cache --pull -t $npm_package_config_image_name ./variants/ubuntu-pure ",
		"prod-push-mac": "docker push $npm_package_config_image_name:latest && docker push $npm_package_config_image_name:$npm_package_config_prod_version",
		"prod-buildpush-linux": "docker buildx build --platform linux/amd64,linux/arm64 --no-cache --pull -t $npm_package_config_image_name:latest -t $npm_package_config_image_name:$npm_package_config_prod_version --push ./variants/ubuntu-pure",
		"prod-buildpush": "bun prod-build-and-push-linux && bun prod-build-mac && bun prod-push-mac",
		"echo-package-config": "echo $npm_package_config_image_name:$npm_package_config_prod_version ",
		"env": "env"
	}
}
